{% extends "layout_ws.twig" %}

{% block content_area %}

<div
    class="row-start-2 row-span-full col-start-1 col-span-full
        flex flex-col justify-start align-middle items-center space-y-3">

    <div
        class="w-full p-3">

        <h1 class="font-bold text-2xl text-stone-700">Dashboard</h1>

        <div class="sticky top-0 left-0 row-start-1 row-span-full col-start-1 col-span-full z-50 
        flex flex-row justify-center align-middle items-center h-full
        border-b border-stone-700 bg-stone-300">

        <form
        id="taskForm"
        >
        <h2>What do you want to achieve today?</h2>

        <input type="text" name="newTask" class="rounded-md">

        <button
            id="taskFormBtn"
            hx-post="/actions/add_new_task"
            hx-include="#taskForm"
            class="flex flex-row justify-between align-middle items-center space-x-3
                w-full p-3 bg-blue-600 hover:bg-blue-500">

                <p class="font-medium text-white">Continue</p>

                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#f7f7f7" viewBox="0 0 256 256"><path d="M221.66,133.66l-72,72a8,8,0,0,1-11.32-11.32L196.69,136H40a8,8,0,0,1,0-16H196.69L138.34,61.66a8,8,0,0,1,11.32-11.32l72,72A8,8,0,0,1,221.66,133.66Z"></path></svg>
                
            </button>
              <h1>Tasks so far:</h1>
              {{ task }}
        </form>

  
        </div>
    
    </div>

</div>

{% endblock %}